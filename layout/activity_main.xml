<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff1dc"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:text="HOW TO UPLOAD DATA"
        android:textColor="#800000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingTop="100dp"
        android:textAlignment="center"/>

    <TextView
        android:paddingTop="180dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.) Click button (+)"/>

    <TextView
        android:paddingTop="240dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.) Upload product image from device."/>

    <TextView
        android:paddingTop="300dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.) Add Product Title."/>

    <TextView
        android:paddingTop="360dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.) Add Product Description"/>

    <TextView
        android:paddingTop="420dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5.) Add Product Price"/>

    <TextView
        android:paddingTop="480dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.) Click button Save Data and Save Image"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="40dp"
        android:src="@drawable/baseline_add_24"
        android:backgroundTint="#800000"
        app:tint="@color/white"
        android:contentDescription="@string/app_name">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>